{
  "description": "Creates a Ubuntu 17.10 (Artful) amd64 based Docker image with JQ app.",
  "variables": {
    "repository_name": "breaking_pitt",
    "image_name": "jq",
    "image_tag": "0.1"
  },
  "builders":[{
     "type": "docker",
     "image": "ubuntu:17.10",
     "commit": "true",
     "changes": [
       "USER www-data",
       "LABEL maintainer='Pedro Garcia Rodriguez <pedgarrod@gmail.com>'",
       "LABEL org.label-schema.vcs-ref=$VCS_REF org.label-schema.vcs-url='https://github.com/breakingpitt/dockerfiles'",
       "ENV DEBIAN_FRONTEND noninteractive",
       "ENTRYPOINT jq",
       "CMD [ \"--help\" ]"
  ]    
  }],
  "provisioners":[
     {
       "type": "shell",
       "inline": ["apt-get -y update; apt-get install -y --no-install-recommends jq; apt-get clean; rm -rf /var/lib/apt/lists/*"]
     }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "{{user `repository_name` }}/{{user `image_name`}}",
      "tag": "{{user `image_tag`}}"
    }
  ]
}
